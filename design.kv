<LoginScreen>:
    GridLayout:
        cols: 1
        GridLayout:
            cols: 1
            padding: 20, 15
            spacing: 0, 20
            Label:
                text: "User Login"
                font_size: '20sp'
            TextInput:
                id: username
                hint_text: "Username"
            TextInput:
                id: password
                password: True
                hint_text: "Password"
            RelativeLayout:
                Button:
                    text: "Login"
                    on_press: root.loginSuccess(root.ids.username.text, root.ids.password.text)
                    size_hint: 0.3, 0.5 
                    pos_hint: {'center_x': 0.5, 'center_y': 0.6}
                    background_color: 0/255, 250/255, 1, 1
            Label:
                id: loginWrong
                text: ""
        GridLayout:
            cols: 2
            size_hint: 0, 0.2
            padding: 10, 20
            spacing: 10, 0
            Button:
                text: "Forgot Password?"
                background_color: 1, 1, 1, 0
                opacity: 1 if self.state == 'normal' else 0.5
                color: 0.1, 0.7, 1, 1
                on_press: root.forgot()
            Button:
                text: "Sign Up" 
                background_color: 1, 1, 1, 0
                opacity: 1 if self.state == 'normal' else 0.5
                color: 0.1, 0.7, 1, 1
                on_press: root.sign_up()

<SignUpScreen>:
    GridLayout:
        cols: 1
        padding: 30, 30
        spacing: 0, 30
        Label:
            text: "Sign your way Up to the magical Journey!!"
            font_size: '20sp'
        TextInput:
            id: username
            hint_text: "Username"
        TextInput:
            id: password
            password: True
            hint_text: "Password"
        RelativeLayout:
            size_hint: 0, 3
            Button:
                text: "Submit"
                on_press: root.add_user(root.ids.username.text, root.ids.password.text)
                size_hint: 0.35, 0.25
                pos_hint: {'center_x': 0.5, 'center_y': 0.9}
                background_color: 0/255, 250/255, 1, 1

<SignUpSuccess>:
    GridLayout:
        cols: 1
        padding: 40, 40
        Label:
            size_hint: 0, 0.5
            text: "Sign Up Successful! Login to enter"
            font_size: '20sp'
        RelativeLayout:
            Button:
                text: "Login"
                on_press: root.goToLogin() 
                size_hint: 0.35, 0.15
                pos_hint: {'center_x': 0.5, 'center_y': 0.8}
                background_color: 0/255, 250/255, 1, 1

<LoginSuccess>:
    GridLayout:
        cols: 1
        padding: 40, 40
        spacing: 30, 30
        RelativeLayout:
            ImageButton:
                on_press: root.logout()
                source: 'logout_hover.png' if self.hovered else 'logout_nothover.png'
                size_hint: 0.3, 0.7
                pos_hint: {'center_x': 0.9, 'center_y': 0.8}
        Label:
            text: "How do you feel?"
            font_size: '20sp'
        TextInput:
            id: feeling
            hint_text: "Things to try: happy, sad, unloved..."
        RelativeLayout:
            Button:
                text: "Enlighten me"
                on_press: root.quote(root.ids.feeling.text)
                size_hint: 0.5, 0.6
                pos_hint: {'center_x': 0.5, 'center_y': 0.6}
                background_color: 0/255, 250/255, 1, 1
        RelativeLayout: 
            size_hint: 1, 2.8
            ScrollView:
                Label:
                    id: quote   
                    text: ""
                    text_size: self.width, None
                    size_hint_y: None
                    height: self.texture_size[1]
<ForgotPassword>:
    GridLayout:
        cols: 1
        Label:
            text: "                  No worries :)\nCreate a new ACCOUNT in a min"
            font_size: '20sp'
        RelativeLayout: 
            Button:
                text: "Sign Up" 
                background_color: 1, 1, 1, 0
                opacity: 1 if self.state == 'normal' else 0.5
                color: 0.1, 0.7, 1, 1
                on_press: root.sign_up()
                pos_hint: {'center_x': 0.5, 'center_y': 1}

         

<RootWidget>:
    LoginScreen:
        name: "login_screen"
    SignUpScreen:
        name: "sign_up_screen"
    SignUpSuccess:
        name: "sign_up_success"
    LoginSuccess:
        name: "login_success"
    ForgotPassword:
        name: "forgot_password"

    
            
